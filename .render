version: 1
services:
  api:
    type: web
    build:
      command: npm install
    start:
      command: npm start
    env:
      - SUPABASE_URL
      - SUPABASE_ANON_KEY
      - SUPABASE_SERVICE_ROLE_KEY
      - JWT_SECRET
      - FRONTEND_URL
      - NODE_ENV
      - PORT
    root: .
    port: 3001
    node_version: 18
